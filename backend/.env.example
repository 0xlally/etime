# Application Configuration
APP_NAME=FastAPI Application
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# Postgres (Docker default)
DATABASE_URL=postgresql+psycopg2://etime:etime_pass@db:5432/etime

# SQLite example:
# DATABASE_URL=sqlite:///./app.db

# MySQL example:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/dbname

# Security
JWT_SECRET=your-super-secret-key-change-this-in-production-use-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database bootstrap / admin seed
AUTO_CREATE_TABLES=True
AUTO_INIT_ADMIN=True
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# API Configuration
API_V1_PREFIX=/api/v1
